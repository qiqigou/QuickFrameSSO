{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "QuickFrameSSO",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/QuickFrameSSO/bin/Debug/netcoreapp3.1/QuickFrameSSO.dll",
            "args": [],
            "cwd": "${workspaceFolder}/QuickFrameSSO",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        }
    ]
}
